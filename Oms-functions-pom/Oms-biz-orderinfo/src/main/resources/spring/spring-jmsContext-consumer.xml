<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- 异步处理订单生成后续操作 -->
	<bean id="asynProcessOrderMessageListener"
		class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
		<constructor-arg>
			<bean class="com.work.shop.oms.jms.listener.AsynProcessOrderConsumer" />
		</constructor-arg>
	</bean>
	<!-- Spring jmsContainer -->
	<bean id="asynProcessOrderJmsContainer"
		class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="jmsFactory" />
		<property name="destination" ref="asyn_process_order" />
		<property name="messageListener" ref="asynProcessOrderMessageListener" />
		<!-- 2到10个消费者 -->
		<property name="concurrency" value="2-10"></property>
	</bean>
</beans>